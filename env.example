# LaCentrale Scraper Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lacentrale_db
DB_USER=postgres

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_EMAIL=admin@lacentrale.com
PGADMIN_PASSWORD=admin123

# =============================================================================
# VNC CONFIGURATION (for debugging Selenium)
# =============================================================================
VNC_PASSWORD=secret

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# Scraping mode: optimized, parallel, or normal
SCRAPING_MODE=optimized

# Page range for scraping
START_PAGE=1
END_PAGE=50

# Number of parallel workers (recommended: 2-5)
NUM_WORKERS=2

# Enable incremental scraping (only new listings)
INCREMENTAL_MODE=true

# Database approach: normalized or denormalized
DATABASE_APPROACH=normalized

# =============================================================================
# SELENIUM CONFIGURATION
# =============================================================================
# Use Docker Selenium service (set to false for local Chrome)
USE_DOCKER_SELENIUM=true
SELENIUM_HUB_URL=http://selenium-chrome:4444/wd/hub

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Python environment
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode
DEBUG=false

# Enable extra debugging features
VERBOSE_LOGGING=false
